/* ============================================================================
   THOUGHT/REASONING MESSAGE STYLES - Modern Thinking UI Component
   ============================================================================
   A polished, modern thought/reasoning display inspired by Gemini CLI and
   Claude's thinking interface. Features smooth animations, clean typography,
   and collapsible content.
*/

/* Main container for the thought message */
.reasoning-message {
    margin-top: 1;
    width: 100%;
    height: auto;
}

/* Card-like wrapper with accent border */
.reasoning-message-wrapper {
    width: 100%;
    height: auto;
    background: $surface;
    border-left: thick $accent;
    padding: 0 1;
    margin: 0;
}

/* Header row containing indicator, status text, and triangle */
.reasoning-message-header {
    width: 100%;
    height: auto;
    padding: 0;
    align: left middle;
}

/* Animated spinner indicator */
.reasoning-indicator {
    width: auto;
    height: auto;
    color: $accent;
    margin-right: 1;
}

.reasoning-indicator.success {
    color: $success;
}

.reasoning-indicator.error {
    color: $error;
}

/* Status text (Thinking/Thought) */
.reasoning-status-text {
    width: auto;
    height: auto;
    color: $foreground;
    text-style: bold;
}

/* Legacy class name for backwards compatibility */
.reasoning-collapsed-text {
    width: auto;
    height: auto;
    color: $foreground;
    text-style: bold;
}

/* Expand/collapse triangle indicator */
.reasoning-triangle {
    width: auto;
    height: auto;
    color: $text-muted;
    margin-left: 1;
}

/* Content area when expanded */
.reasoning-message-content {
    width: 100%;
    height: auto;
    padding: 1 0 0 2;
    margin: 0;
    color: $text-muted;
    border-top: solid $surface-darken-1;
}

/* All content inside reasoning uses muted color */
.reasoning-message-content * {
    color: $text-muted;
}

/* Brain/Thinking icon (if used separately) */
.reasoning-icon {
    width: auto;
    height: auto;
    margin-right: 1;
    color: $accent;
}

.reasoning-icon.success {
    color: $success;
}

.reasoning-icon.error {
    color: $error;
}

/* ============================================================================
   THINKING PHASES / STEPS DISPLAY
   ============================================================================
   For showing structured thinking steps or phases like Claude's extended
   thinking display.
*/

/* Container for thinking phases */
.thinking-phases {
    width: 100%;
    height: auto;
    padding: 0;
    margin: 0 0 1 0;
}

/* Individual thinking phase/step */
.thinking-phase {
    width: 100%;
    height: auto;
    padding: 0 0 0 2;
    margin: 0;
}

/* Phase header with icon and title */
.thinking-phase-header {
    width: 100%;
    height: auto;
    align: left middle;
}

/* Phase number/bullet indicator */
.thinking-phase-bullet {
    width: auto;
    height: auto;
    color: $accent;
    margin-right: 1;
}

/* Phase title text */
.thinking-phase-title {
    width: auto;
    height: auto;
    color: $foreground;
    text-style: bold;
}

/* Phase content/description */
.thinking-phase-content {
    width: 100%;
    height: auto;
    padding: 0 0 0 2;
    color: $text-muted;
}

/* ============================================================================
   ANIMATED STATES
   ============================================================================
*/

/* Active thinking state - subtle pulse effect via border color */
.reasoning-message-wrapper.thinking {
    border-left: thick $warning;
}

/* Completed thought state */
.reasoning-message-wrapper.completed {
    border-left: thick $success;
}

/* Error in thinking */
.reasoning-message-wrapper.error {
    border-left: thick $error;
}

/* ============================================================================
   COLLAPSED/EXPANDED STATES
   ============================================================================
*/

/* When collapsed, reduce visual prominence */
.reasoning-message.collapsed .reasoning-message-content {
    display: none;
}

.reasoning-message.collapsed .reasoning-triangle {
    color: $text-muted;
}

/* When expanded, show full content */
.reasoning-message.expanded .reasoning-triangle {
    color: $accent;
}

/* ============================================================================
   MARKDOWN CONTENT STYLING WITHIN THOUGHT
   ============================================================================
*/

/* Code blocks within reasoning */
.reasoning-message-content MarkdownFence {
    background: $surface-darken-1;
    padding: 1;
    margin: 1 0;
}

/* Bullet points within reasoning */
.reasoning-message-content MarkdownBulletList {
    margin: 0 0 0 2;
    color: $text-muted;
}

/* Numbered lists within reasoning */
.reasoning-message-content MarkdownOrderedList {
    margin: 0 0 0 2;
    color: $text-muted;
}

/* Headers within reasoning (rare but supported) */
.reasoning-message-content MarkdownH1,
.reasoning-message-content MarkdownH2,
.reasoning-message-content MarkdownH3 {
    color: $text-muted;
    text-style: bold;
    margin: 1 0 0 0;
}

/* Links within reasoning */
.reasoning-message-content MarkdownLink {
    color: $accent;
    text-style: underline;
}

/* Inline code within reasoning */
.reasoning-message-content MarkdownInlineCode {
    background: $surface-darken-1;
    color: $text-muted;
}

/* ============================================================================
   THINKING SUMMARY (compact view)
   ============================================================================
*/

/* Compact summary shown when collapsed */
.thinking-summary {
    width: 100%;
    height: auto;
    color: $text-muted;
    text-style: italic;
    padding: 0 0 0 2;
}

/* Token/time count display */
.thinking-stats {
    width: auto;
    height: auto;
    color: $text-muted;
    margin-left: 2;
    text-style: italic;
}

/* ============================================================================
   STREAM INDICATOR (for live thinking)
   ============================================================================
*/

/* Blinking cursor for active stream */
.thinking-cursor {
    width: auto;
    height: auto;
    color: $accent;
}

/* Stream buffer indicator */
.thinking-stream-indicator {
    width: auto;
    height: auto;
    color: $text-muted;
    text-style: italic;
}
